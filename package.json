{
  "name": "form-constructor",
  "version": "0.0.0",
  "description": "Simple form constructor application.",
  "main": "index.js",
  "scripts": {
    "build": "webpack --progress --config webpack/production.config.js",
    "build:component": "webpack --progress --config webpack/component.config.js",
    "watch": "webpack-dev-server --progress --config webpack/development.config.js",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:js": "xo",
    "lint:css": "stylelint src/**/*.css",
    "test": "env NODE_PATH=src ava",
    "test:watch": "npm test -- -w",
    "pretest": "npm run lint",
    "coverage": "nyc npm test",
    "coverage:report": "nyc report --reporter=html",
    "precommit": "npm test"
  },
  "keywords": [],
  "author": "Aleksandr Yakunichev <canvaskisa@gmail.com> (https://github.com/canvaskisa)",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/canvaskisa/form-constructor.git"
  },
  "dependencies": {
    "babel-core": "6.13.2",
    "babel-loader": "6.2.5",
    "babel-plugin-transform-runtime": "6.12.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "babel-runtime": "6.11.6",
    "classnames": "2.2.5",
    "compression-webpack-plugin": "0.3.1",
    "css-loader": "0.24.0",
    "css-mqpacker": "5.0.1",
    "extract-text-webpack-plugin": "1.0.1",
    "html-webpack-plugin": "2.22.0",
    "json-loader": "0.5.4",
    "postcss-clearfix": "1.0.0",
    "postcss-cssnext": "2.7.0",
    "postcss-font-magician": "1.4.0",
    "postcss-import": "8.1.2",
    "postcss-initial": "1.5.2",
    "postcss-loader": "0.10.1",
    "postcss-short": "1.4.0",
    "react": "15.3.1",
    "react-dom": "15.3.1",
    "react-redux": "4.4.5",
    "react-sortable-hoc": "0.0.7",
    "redux": "3.5.2",
    "shortid": "2.2.6",
    "style-loader": "0.13.1",
    "switch-match": "2.0.4",
    "webpack": "1.13.2"
  },
  "devDependencies": {
    "ava": "0.16.0",
    "babel-plugin-react-transform": "2.0.2",
    "css-modules-require-hook": "4.0.2",
    "enzyme": "2.4.1",
    "eslint": "3.3.1",
    "eslint-config-xo-react": "0.9.0",
    "eslint-plugin-react": "6.1.2",
    "ip": "1.1.3",
    "nyc": "8.1.0",
    "react-addons-test-utils": "15.3.1",
    "react-transform-catch-errors": "1.0.2",
    "react-transform-hmr": "1.0.4",
    "redbox-react": "1.3.0",
    "redux-logger": "2.6.1",
    "sinon": "1.17.5",
    "stylelint": "7.1.0",
    "stylelint-config-standard": "12.0.0",
    "webpack-dev-server": "1.15.0",
    "xo": "0.16.0"
  },
  "ava": {
    "babel": "inherit",
    "files": [
      "src/**/*.spec.js"
    ],
    "require": [
      "babel-core/register",
      "css-modules-require-hook/preset"
    ]
  },
  "xo": {
    "esnext": true,
    "plugin": "react",
    "extends": "xo-react",
    "rules": {
      "import/no-extraneous-dependencies": [
        0
      ],
      "react/jsx-filename-extension": [
        0
      ],
      "react/jsx-pascal-case": [
        0
      ],
      "camelcase": [
        0
      ],
      "react/require-optimization": [
        0
      ],
      "xo/filename-case": [
        0
      ],
      "babel/new-cap": [
        0
      ],
      "no-negated-condition": [
        0
      ]
    },
    "envs": [
      "node",
      "browser"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": "tab"
    }
  }
}
